{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react-native",
    "module": "esnext", // Changed from "node16"
    "moduleResolution": "bundler", // Changed from "node16"
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/screens/**/*.tsx",
    "types/**/*.ts", // This is repeated, consider if you need it twice.
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "app/HomeScreen.tsx", "app/SplashScreen.tsx"  ]
}
